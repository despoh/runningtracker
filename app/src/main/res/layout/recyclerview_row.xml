<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/row_dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:text="5/10/19 "
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/row_TimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_toStartOf="@+id/row_distanceTextView"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:text="28:50"
            />

        <TextView
            android:id="@+id/row_distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="10KM"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"

            />

        <TextView
            android:id="@+id/row_modeTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="RUN"
            android:textAllCaps="true"
            android:layout_toEndOf="@+id/row_dateTextView"
            />

    </RelativeLayout>


</LinearLayout>